# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/mistudio
DATABASE_URL_SYNC=postgresql://postgres:password@localhost:5432/mistudio

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Data Storage Paths
DATA_DIR=/data
HF_HOME=/data/huggingface_cache

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=true
API_BASE_URL=http://dev-mistudio.mcslab.io

# CORS Configuration
ALLOWED_ORIGINS=http://dev-mistudio.mcslab.io,http://localhost:3000,http://localhost

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# HuggingFace Configuration
HF_TOKEN=
HF_CACHE_DIR=/data/huggingface_cache

# WebSocket Configuration
WEBSOCKET_PING_INTERVAL=30
WEBSOCKET_PING_TIMEOUT=10

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_DOWNLOADS_PER_HOUR=10

# Development/Production
ENVIRONMENT=development
DEBUG=true

# ============================================================================
# Neuronpedia Local Instance Configuration (Optional)
# ============================================================================
# Enable "Push to Neuronpedia" feature for direct database push to local instance
# Database connection for local Neuronpedia instance
# Native backend connects via localhost:5433 (mapped from neuronpedia-postgres container)
NEURONPEDIA_LOCAL_DB_URL=postgresql://neuronpedia:neuronpedia_local_dev@localhost:5433/neuronpedia
# Public URL for Neuronpedia webapp
NEURONPEDIA_LOCAL_URL=http://dev-neuronpedia.mcslab.io
# User ID for creator when pushing data (optional)
NEURONPEDIA_LOCAL_ADMIN_USER_ID=mistudio-admin
